extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Editorial:
      input#name.form-control(type='text', placeholder='Vicenc Vives' name='name' value=(undefined===editorial ? '' : editorial.name), required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg